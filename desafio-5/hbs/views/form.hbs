<div class="container">
    <h1 class="">Ingresar producto</h1>
    {{#if emptyValue}}
        <p>
            {{ message }}
        </p>
    {{/if}}

    <form class="bg-light p-3 mb-3" style="width: 600px;" action="/productos" method="POST">
        <div class="form-group row">
            <label for="title" class="col-md-4 col-form-label">Producto: </label>
            <div class="col-md-8 p-1">
                <input type="text" id="title" name="title">
            </div>
        </div>

        <div class="form-group row">
            <label for="price" class="col-md-4 col-form-label">Precio: </label>
            <div class="col-md-8 p-1">
                <input type="number" id="price" name="price">
            </div>
        </div>

        <div class="form-group row">
            <label for="thumbnail" class="col-md-4 col-form-label">Imagen: </label>
            <div class="col-md-8 p-1">
                <input type="text" id="thumbnail" name="thumbnail">
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-md-10">
                <input value="Cargar producto" class="btn btn-primary" type="submit">
            </div>
        </div>
    </form>


    <form class="p-3" action="/productos" method="get">
        <button class="btn btn-dark">Ver productos</button>
    </form>
</div>
