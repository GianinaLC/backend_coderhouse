<div class='container'>
    <h1 class="my-3">{{ titulo }}</h1>

    <table class="table table-dark table-striped" style="width: 400px;" >
        <thead>
            <tr>
                <th scope="col"> ID </th>
                <th scope="col"> Nombre </th>
                <th scope="col"> Precio </th>
                <th scope="col"> Imagen </th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td> {{ this.id }} </td>
                    <td> {{ this.title }} </td>
                    <td> {{ this.price }} </td>
                    <td><img src="{{this.thumbnail}}" width="100px" alt="{{ this.title }}"> </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <form class="p-3" action="/" method="get">
        <button class="btn btn-dark">Volver</button>
    </form>
</div>
